
<div class="event-show-container">
  <div class="row">
    <div class="event-show-name"><h2><%= @event.name %></h2> <span class="event-status"><% if @event.active == true %>
          <p>Status: Active</p>
          <% elsif @event.active == false %>
          <p>Status: Inactive</p>
          <% end %> </span></div>
    <div class="col-xs-8">
      <div class="event-details-left">
        <div class="event-show-description"><p><%= @event.description %></p></div>
        <div class="event-location"></div>
        <div class="event-dates">
          <p>Event Starts: <%= @event.start_date %></p>
          <p>Event  Ends: <%= @event.end_date %></p>
        </div>
      </div>
    </div>
    <div class="col-xs-4">
      <img class="event-photo" src="https://picsum.photos/200/300/?random">
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-12">
      <div class="links-from-event-show-page">
        <span class="btn-standard"><%= link_to "Edit Event", edit_event_path(@event) %></span>
        <span class="btn-standard"><%= link_to "Delete event", event_path(@event),
            method: :delete,
            data: { confirm: "Are you sure?" } %></span>
              <% if @event.active == true %>
              <span class="btn-standard" class="event-deactivate-trigger">
                <%= link_to "Deactivate Event", deactivate_event_path(@event), method: :post %>
                  <% end %>
                </span>
      </div>
    </div>
  </div>


  <div class="row">
      <table class="event-log-table">
    <tr>
      <th align="center"> Date </th>
      <th> Details </th>
      <th> Attachments</th>
    </tr>
    <% @event_logs.each do |event_log| %>
    <tr>
    <td><%= event_log.date_time %></td>
    <td><%= event_log.description %></td>
    <td><%= event_log.attachment %></td>
    </tr>
    <% end %>
    </table>
  </div>
</div>


