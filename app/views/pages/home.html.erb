    <div class="row">
      <div class="col-md-3 col-lg-3"></div>
      <div class="col-sm-12 col-md-6 col-lg-6">
        <img src="https://res.cloudinary.com/ebc-industries/image/upload/v1534155047/review3.png">
        <p>a lost webdev</p>
      <div class="col-md-3 col-lg-3"></div>
      </div>
    </div>
  </div>





